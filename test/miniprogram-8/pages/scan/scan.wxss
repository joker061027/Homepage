.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scan-btn {
  margin: 40px 0;
  width: 100%;
}

.result {
  margin-top: 20px;
  padding: 20px;
  width: 90%;
  border: 1px solid #eee;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
  color: #333;
}

.result-item {
  margin: 8px 0;
  font-size: 16px;
  color: #666;
}

.ticket-info {
  margin-top: 15px;
  padding-top: 15px;
  border-top: 1px dashed #eee;
}

.use-btn {
  margin-top: 20px;
}

.valid {
  color: #09bb07;
}

.invalid {
  color: #e64340;
}

button[disabled] {
  opacity: 0.6;
}